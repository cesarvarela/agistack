{
	"name": "agistack",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "pnpm --filter '@agistack/node' --filter '@agistack/control-plane' --filter '@agistack/frontend' dev",
		"test": "pnpm --filter '*' test",
		"dev:cp": "cd apps/control-plane && pnpm run dev",
		"dev:node": "cd apps/node && pnpm run dev",
		"dev:web": "cd apps/frontend && pnpm run dev",
		"db:generate": "cd packages/control-plane-services && pnpm run db:generate",
		"db:migrate": "cd packages/control-plane-services && pnpm run db:migrate",
		"db:studio": "cd packages/control-plane-services && pnpm run db:studio",
		"prepare": "husky",
		"check": "biome lint .",
		"check:fix": "biome lint --write .",
		"check-types": "pnpm --filter '*' check-types"
	},
	"lint-staged": {
		"*.ts": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"devDependencies": {
		"@agistack/typescript-config": "workspace:*",
		"@biomejs/biome": "^2.3.2",
		"@types/node": "^22.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"typescript": "^5.9.2"
	},
	"packageManager": "pnpm@9.0.0",
	"dependencies": {
		"@trpc/client": "^11.7.1",
		"elysia": "^1.4.13",
		"node-pty": "^1.0.0",
		"tsx": "^4.20.6"
	}
}
