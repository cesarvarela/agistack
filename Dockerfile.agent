# syntax=docker/dockerfile:1

# Build stage
FROM node:20-alpine AS builder

# Install build dependencies for native modules
RUN apk add --no-cache python3 make g++

# Install pnpm
RUN corepack enable && corepack prepare pnpm@9.0.0 --activate

WORKDIR /app

# Copy package files (only what's needed for agent)
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/agent/package.json ./apps/agent/
COPY packages/node-api/package.json ./packages/node-api/
COPY packages/node-services/package.json ./packages/node-services/
COPY packages/tool-metadata/package.json ./packages/tool-metadata/
COPY packages/typescript-config/package.json ./packages/typescript-config/

# Install dependencies
# Skip husky git hooks installation in Docker
RUN HUSKY=0 pnpm install --frozen-lockfile --filter @agistack/agent...

# Copy source code
COPY apps/agent ./apps/agent
COPY packages/node-api ./packages/node-api
COPY packages/node-services ./packages/node-services
COPY packages/tool-metadata ./packages/tool-metadata
COPY packages/typescript-config ./packages/typescript-config

# Production stage
FROM node:20-alpine

# Install pnpm and runtime dependencies
RUN apk add --no-cache tini && \
    corepack enable && corepack prepare pnpm@9.0.0 --activate

WORKDIR /app

# Copy only agent-related files from builder
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/apps/agent ./apps/agent
COPY --from=builder /app/packages/node-api ./packages/node-api
COPY --from=builder /app/packages/node-services ./packages/node-services
COPY --from=builder /app/packages/tool-metadata ./packages/tool-metadata
COPY --from=builder /app/packages/typescript-config ./packages/typescript-config
COPY --from=builder /app/package.json /app/pnpm-lock.yaml /app/pnpm-workspace.yaml ./

# Set environment variables
ENV NODE_ENV=production

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s \
  CMD node -e "require('http').get('http://localhost:${PORT}', (r) => r.statusCode === 200 ? process.exit(0) : process.exit(1))"

# Use tini as entrypoint for proper signal handling
ENTRYPOINT ["/sbin/tini", "--"]

# Run agent
CMD ["pnpm", "--filter", "@agistack/agent", "start"]
